<UserControl x:Class="SiteServer.Service.Pages.Introduction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel >
                <TextBlock Text="SiteServer Service 服务组件" Style="{StaticResource Heading1}" Margin="0,0,0,8"/>
                <mui:BBCodeBlock BBCode="SiteServer Service 服务组件是为SiteServer 系列产品服务的服务程序，系统将自动在后台运行。网址： [url=http://cms.siteserver.cn/download.html]SiteServer Service[/url]" Margin="0,0,0,32" />
                <TextBlock Text="参数设置" Style="{StaticResource Heading2}" />
                <mui:BBCodeBlock BBCode="服务组件运行前需要设置SiteServer 系统运行的根目录文件夹，可以点击 [url=/Pages/Settings.xaml]设置[/url] 进行修改。" Margin="0,0,0,32"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
